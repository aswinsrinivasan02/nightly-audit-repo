
@{
    Layout = null;
}

@System.Web.Optimization.Scripts.Render("~/bundles/jquery")
@System.Web.Optimization.Scripts.Render("~/Scripts/BlockUI")
@System.Web.Optimization.Scripts.Render("~/Scripts/MultiSelect")
<div class="pageHeader">
    New Audit Job
</div>

<div class="form">
    <div class="container">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2">Select Audit Type:</label>
                <div class="col-sm-4">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle " type="button" data-toggle="dropdown">
                            {{selectedAuditJob}}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a ng-click="loadDynamicControls('Select Audit Job')"></a></li>
                            <li ng-repeat="auditType in auditDTOList">
                                <a ng-model="selectedAuditJob" ng-click="loadDynamicControls(auditType)">{{auditType.AuditName}}</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>

            <div ng-hide="hideDynamicControl" class="form-group">
                <label class="control-label col-sm-2">{{paramaterLabel}}</label>
                <div class="col-sm-4">
                    <ng-include id="ngInclude" ng-controller="AuditController" onload="item = auditParameterValuesList" src="tpl.contentUrl"></ng-include>
                </div>
            </div>
            <div ng-hide="hideDynamicControl" class="form-group">
                <div class="col-sm-2 scheduler">
                    <div>
                        <input type="radio" name="checkboxes[249]" id="frm-test-elm-120-1" autocomplete="off" checked />
                        <div class="btn-group">
                            <label for="frm-test-elm-120-1" class="btn btn-default">
                                <span class="fa fa-check-circle-o fa-lg"></span>
                                <span class="fa fa-circle-o fa-lg"></span>
                            </label>
                        </div>
                        <label class="control-label" for="frm-test-elm-120-2">One Time </label>
                    </div>
                    <div>
                        <input type="radio" name="checkboxes[249]" id="frm-test-elm-120-2" autocomplete="off" />
                        <div class="btn-group">
                            <label for="frm-test-elm-120-2" class="btn btn-default">
                                <span class="fa fa-check-circle-o fa-lg"></span>
                                <span class="fa fa-circle-o fa-lg"></span>
                            </label>
                        </div>
                        <label class="control-label" for="frm-test-elm-120-2">Daily</label>
                    </div>
                    <div>
                        <input type="radio" name="checkboxes[249]" id="frm-test-elm-120-3" autocomplete="off" />
                        <div class="btn-group">
                            <label for="frm-test-elm-120-3" class="btn btn-default">
                                <span class="fa fa-check-circle-o fa-lg"></span>
                                <span class="fa fa-circle-o fa-lg"></span>
                            </label>
                        </div>
                        <label class="control-label" for="frm-test-elm-120-2">Weekly</label>
                    </div>
                    <div>
                        <input type="radio" name="checkboxes[249]" id="frm-test-elm-120-4" autocomplete="off" />
                        <div class="btn-group">
                            <label for="frm-test-elm-120-4" class="btn btn-default">
                                <span class="fa fa-check-circle-o fa-lg"></span>
                                <span class="fa fa-circle-o fa-lg"></span>
                            </label>
                        </div>
                        <label class="control-label" for="frm-test-elm-120-2">Monthly</label>
                    </div>
                </div>
                <div class="col-sm-8 scheduler-right">
                    <div class="form-group row scheduler-right">
                        <label class="control-label col-sm-2">Start:</label>
                        <div class="col-sm-2">
                            <div class='input-group date' id='datetimepicker1'>
                                <input type='text' class="form-control" />
                                @*<span class="input-group-addon">
                                        <span class="glyphicon glyphicon-calendar"></span>
                                    </span>*@
                            </div>

                        </div>
                    </div>
                    <div class="form-group row scheduler-right">
                        <label class="control-label col-sm-2">Recur Every:</label>
                        <div class="col-sm-2">
                            <input type='text' class="form-control input-three-digit" />
                        </div>
                        <label class="control-label col-sm-2">days</label>
                    </div>
                    <div class="form-group row scheduler scheduler-right">
                        <div class="col col-sm-6 days-week">
                            <input type="checkbox" name="checkboxes[100-0]" id="frm-test-elm-100-0" autocomplete="off" />
