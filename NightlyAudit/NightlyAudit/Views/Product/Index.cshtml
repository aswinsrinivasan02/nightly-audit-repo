
@{
    Layout = null;
}

<script type="text/ng-template" id="productConfiguration.html">
    <form class="form-horizontal">
        <p><b>Configuration</b></p>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">Name:</label>
            <div class="col-sm-8">
                <input type="text" ng-model="ngDialogData.ProductCode" class="form-control" id="serverName" placeholder="Enter server name">
                <input type="hidden" name="someData" value="{{ngDialogData.ProductType}}" />
            </div>
        </div>
        <div class="form-group">
            <label class="control-label col-sm-2" for="email">IP:</label>
            <div class="col-sm-8">
                <input type="text" ng-model="ngDialogData.IPInfo" class="form-control" id="ipNumber" placeholder="Enter IP">
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-4 col-sm-3 text-center">
                <div class="btn-group">
                    <button id="button" name="button" ng-click="closeThisDialog(ngDialogData)" class="btn btn-primary">Save</button>
                </div>
            </div>
        </div>

    </form>

</script>
<div class="pageHeader">
    Product Setting
</div>
<div class="form">
    <div class="container">
        <form class="form-horizontal">
            <div class="form-group">
                <label class="control-label col-sm-2" for="email">Select Product:</label>
                <div class="col-sm-4">
                    <div class="dropdown">
                        <button class="btn btn-primary dropdown-toggle " type="button" data-toggle="dropdown">

                            {{selectedProductName}}
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            <li><a ng-click="showProductTypes('All')">All</a></li>
                            <li ng-repeat="product in products">
                                <a ng-model="selectedProductName" ng-click="showProductTypes(product)">{{product.Name}}</a>
                            </li>
                        </ul>
                    </div>

                </div>
            </div>
            <div class="form-group">
                <div data-ng-click="showPopUp(product)" ng-repeat="product in productsConfiguredFiltered" class="tile tile-rectangle right-border" data-role="tile">
                    <div class="col-xs-4">
                        <div class="pull-left"><img id="productImage" alt="logo" src="~/Content/Images/Cage.png" /></div>
                    </div>
                    <div class="col-xs-4 pull-right centered">
                        <p>
                            <small>
                                <input type="hidden" name="productConfiguredId" value="{{product.ProductId}}">
                                <label>{{product.ProductCode}}</label>
                                <label>{{product.IPInfo}}</label>
                            </small>
                        </p>
                    </div>
                </div>
                <div ng-hide="hideAdd" data-ng-click="showPopUp()" class="tile tile-rectangle dashed-add " data-role="tile">
                    <span></span>
                </div>
            </div>

        </form>
    </div>
</div>
<script src="~/Scripts/ngDialog.js"></script>
<script type="text/javascript">
    $('.dropdown-menu a').click(function () {
        $('#selected').text($(this).text());
    });
</script>